{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default Template Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the template."
    },
    "description": {
      "type": "string",
      "description": "A description of the template."
    },
    "version": {
      "type": "string",
      "description": "Version of the template."
    },
    "files": {
      "type": "array",
      "description": "List of files included in the template.",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["path", "content"]
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the template.",
      "additionalProperties": true
    }
  },
  "required": []
}
